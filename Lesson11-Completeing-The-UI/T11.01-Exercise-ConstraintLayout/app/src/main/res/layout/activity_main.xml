<?xml version="1.0" encoding="utf-8"?>
<!-- DONE (17) Surround the Constraint layout with a ScrollView -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- DONE (2) Replace the Relative layout with a ConstraintLayout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- DONE (3) Create a TextView for the Passenger label and name -->
        <!-- DONE (4) Use _tools_:text to set the text value -->
        <TextView
            android:id="@+id/passenger_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/passenger_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/passenger_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@+id/passenger_label"
            app:layout_constraintTop_toBottomOf="@+id/passenger_label"
            tools:text="@string/passenger_name" />

        <!-- DONE (5) Create an ImageView for the left rectangle -->
        <!-- DONE (6) Set the background to the shape_rectangle_stroke drawable -->
        <ImageView
            android:id="@+id/origin_box"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/passenger_label"
            app:layout_constraintTop_toBottomOf="@+id/passenger_name"
            app:srcCompat="@drawable/shape_rectangle_stroke" />

        <!-- DONE (7) Create an ImageView for the divider -->
        <ImageView
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryLight"
            app:layout_constraintBottom_toBottomOf="@+id/origin_box"
            app:layout_constraintEnd_toStartOf="@+id/destination_box"
            app:layout_constraintStart_toEndOf="@+id/origin_box"
            app:layout_constraintTop_toTopOf="@+id/origin_box" />

        <!-- DONE (8) Create an ImageView for the rightRectangle -->
        <ImageView
            android:id="@+id/destination_box"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/origin_box"
            app:srcCompat="@drawable/shape_rectangle_stroke" />

        <!-- DONE (9) Create a TextView for the origin code, the destination code and the flight code -->
        <TextView
            android:id="@+id/origin_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="@+id/divider"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintStart_toStartOf="@+id/origin_box"
            app:layout_constraintTop_toTopOf="@+id/divider"
            tools:text="@string/origin_code" />

        <TextView
            android:id="@+id/destination_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBaseline_toBaselineOf="@+id/origin_code"
            app:layout_constraintEnd_toEndOf="@+id/destination_box"
            app:layout_constraintStart_toEndOf="@+id/divider"
            tools:text="@string/destination_code" />

        <TextView
            android:id="@+id/flight_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintEnd_toStartOf="@+id/destination_box"
            app:layout_constraintStart_toEndOf="@+id/origin_box"
            tools:text="@string/flight_code" />

        <!-- DONE (15) Import the plane image SVG file into the drawable directory and name it art_plane -->
        <!-- DONE (16) Create an ImageView for the plane and set the background to art_plane drawable -->
        <ImageView
            android:id="@+id/plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toStartOf="@+id/destination_box"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:srcCompat="@drawable/art_plane" />

        <!-- DONE (10) Create a TextView for the time texts and their corresponding labels -->
        <TextView
            android:id="@+id/boarding_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/boarding_time_label"
            app:layout_constraintStart_toStartOf="@+id/passenger_label"
            app:layout_constraintTop_toBottomOf="@+id/flight_code" />

        <TextView
            android:id="@+id/boarding_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintStart_toStartOf="@+id/boarding_time_label"
            app:layout_constraintTop_toBottomOf="@+id/boarding_time_label"
            tools:text="@string/boarding_time" />

        <TextView
            android:id="@+id/boarding_in_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="@string/boarding_in_label"
            app:layout_constraintBaseline_toBaselineOf="@+id/boarding_time_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp" />

        <TextView
            android:id="@+id/boarding_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorBad"
            app:layout_constraintStart_toStartOf="@+id/boarding_in_label"
            app:layout_constraintTop_toBottomOf="@+id/boarding_in_label"
            tools:text="@string/boarding_in_time" />

        <TextView
            android:id="@+id/departure_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/departure_time_label"
            app:layout_constraintStart_toStartOf="@+id/boarding_time_label"
            app:layout_constraintTop_toBottomOf="@+id/boarding_time" />

        <TextView
            android:id="@+id/departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorGood"
            app:layout_constraintStart_toStartOf="@+id/departure_time_label"
            app:layout_constraintTop_toBottomOf="@+id/departure_time_label"
            tools:text="@string/departure_time" />

        <TextView
            android:id="@+id/arrival_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrival_time_label"
            app:layout_constraintBaseline_toBaselineOf="@+id/departure_time_label"
            app:layout_constraintStart_toStartOf="@+id/boarding_in_label" />

        <TextView
            android:id="@+id/arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorGood"
            app:layout_constraintStart_toStartOf="@+id/arrival_time_label"
            app:layout_constraintTop_toBottomOf="@+id/arrival_time_label"
            tools:text="@string/arrival_time" />

        <!-- DONE (11) Create an ImageView for the blue table's header -->
        <ImageView
            android:id="@+id/table_header"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/departure_time"
            app:layout_constraintTop_toBottomOf="@+id/departure_time"
            app:srcCompat="@color/colorPrimaryLight" />

        <!-- DONE (12) Create an ImageView for the blue table's body -->
        <ImageView
            android:id="@+id/table_body"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/departure_time"
            app:layout_constraintTop_toBottomOf="@+id/table_header"
            app:srcCompat="@color/colorPrimary"
            android:layout_marginRight="16dp" />

        <!-- DONE (13) Create a TextView for each of the labels and text fields in the blue table -->
        <TextView
            android:id="@+id/terminal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/terminal_label"
            app:layout_constraintBottom_toBottomOf="@+id/table_header"
            app:layout_constraintEnd_toStartOf="@+id/gate_label"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintStart_toStartOf="@+id/table_header"
            app:layout_constraintTop_toTopOf="@+id/table_header" />

        <TextView
            android:id="@+id/gate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/gate_label"
            app:layout_constraintBaseline_toBaselineOf="@+id/terminal_label"
            app:layout_constraintEnd_toEndOf="@+id/table_header"
            app:layout_constraintStart_toStartOf="@+id/table_header" />

        <TextView
            android:id="@+id/seat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/seat_label"
            app:layout_constraintBaseline_toBaselineOf="@+id/terminal_label"
            app:layout_constraintEnd_toEndOf="@+id/table_header"
            app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintStart_toEndOf="@+id/gate_label" />

        <TextView
            android:id="@+id/terminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="@+id/table_body"
            app:layout_constraintStart_toStartOf="@+id/terminal_label"
            app:layout_constraintEnd_toEndOf="@+id/terminal_label"
            app:layout_constraintTop_toTopOf="@+id/table_body"
            tools:text="@string/terminal"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/gate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/background_light"
            app:layout_constraintBaseline_toBaselineOf="@+id/terminal"
            app:layout_constraintEnd_toEndOf="@+id/gate_label"
            app:layout_constraintStart_toStartOf="@+id/gate_label"
            tools:text="@string/gate" />

        <TextView
            android:id="@+id/seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/background_light"
            app:layout_constraintBaseline_toBaselineOf="@+id/terminal"
            app:layout_constraintEnd_toEndOf="@+id/seat_label"
            app:layout_constraintStart_toStartOf="@+id/seat_label"
            tools:text="@string/seat" />

        <!-- DONE (14) Create an ImageView for the barcode -->
        <ImageView
            android:id="@+id/barcode"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/table_body"
            app:layout_constraintStart_toStartOf="@+id/table_body"
            app:layout_constraintTop_toBottomOf="@+id/gate"
            app:srcCompat="@mipmap/barcode" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>